{
    "name": "mkoprek/request-validation-bundle",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Maciej Koprek",
            "email": "mkoprek@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "symfony/config": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/http-kernel": "^5.4",
        "symfony/validator": "^5.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.92",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "MKoprek\\RequestValidation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\MKoprek\\RequestValidation\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
